<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <!-- アイテム情報テーブル -->
    <class name="jp.michikusa.chitose.entity.ItemInfo" table="item_info">
        <id name="id" column="id" type="long">
            <generator class="native"/>
        </id>
        <property name="categoryId" column="category_id" type="long" not-null="true">
            <!-- <comment>アイテムの分類 e.g.消費アイテム、アラガミ素材</comment> -->
        </property>
        <property name="name" column="name" type="java.lang.String" length="128" not-null="true">
            <!-- <comment>アイテム名</comment> -->
        </property>
        <property name="nitems" column="nitems" type="java.lang.Integer">
            <!-- <comment>最大携行可能数</comment> -->
        </property>
        <property name="buyAmount" column="buy_amount" type="java.lang.Integer">
            <!-- <comment>購入価格</comment> -->
        </property>
        <property name="sellAmount" column="sell_amount" type="java.lang.Integer">
            <!-- <comment>売却価格</comment> -->
        </property>
        <property name="note" column="note" type="java.lang.String">
            <!-- <comment>主な入手先等、備考</comment> -->
        </property>

        <set name="categories">
            <key column="category_id" not-null="true"/>
            <one-to-many class="jp.michikusa.chitose.entity.ItemCategory"/>
        </set>
    </class>
</hibernate-mapping>

